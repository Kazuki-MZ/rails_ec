
  <div class="container">
    <main>
      <div class="py-5 text-center">
        <h2>購入画面</h2>
      </div>

      <div class="row g-5">
        <div class="col-md-5 col-lg-4 order-md-last">
          <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-primary">カートの中身</span>
            <span class="badge bg-primary rounded-pill"><%= current_cart.total_quantity %></span>
          </h4>
          <ul class="list-group mb-3">
            <% current_cart.cart_items.each do |cart_item| %>
            <li class="list-group-item d-flex justify-content-between lh-sm">
              <div class="row">
                <div class="col-md-4">
                  <h6 class="my-0"><%= cart_item.item.name %></h6>
             </div>
                <div class="col-md-4">
                  <h6 class="my-0">数量: <%= cart_item.quantity %></h6>
                </div>
                <div class="col-md-4">
                  <h6 class="my-0 ">
                    <%= link_to "削除", cart_item_path(cart_item), data: { turbo_method: :delete  } , class: "btn btn-secondary btn-sm" %>
                  </h6>
                </div>
              </div>
            </li>
            <% end %> 
            <li class="list-group-item d-flex justify-content-between">
              <span>合計金額</span>
              <strong>
                <%= current_cart.total_amount %>円
              </strong>
            </li>
          </ul>

          <form class="card p-2">
            <div class="input-group">
              <input
                type="text"
                class="form-control"
                placeholder="Promo code" />
              <button type="submit" class="btn btn-secondary">Redeem</button>
            </div>
          </form>
        </div>
        <div class="col-md-7 col-lg-8">
          <h4 class="mb-3">請求先住所</h4>
            <%= form_with url: order_path(@order), method: :post do |f| %>
          <form class="needs-validation" novalidate="">
            <div class="row g-3">
              <div class="col-sm-6">
                <%= f.label :firstname, "名字" %>
                <%= f.text_field :firstname  %>
                <div class="invalid-feedback">
                  Valid first name is required.
                </div>
              </div>

              <div class="col-sm-6">
                <%= f.label :lastname, "名前" %>
                <%= f.text_field :lastname %>
                  <div class="invalid-feedback">Valid last name is required.</div>
              </div>

              <div class="col-12">
                <%= f.label :username, "ユーザーネーム" %>
                <%= f.text_field :username %>
                <div class="input-group has-validation">
                  <span class="input-group-text">@</span>
                  <div class="invalid-feedback">Your username is required.</div>
                </div>
              </div>

              <div class="col-12">
                <%= f.label :email, "Email" %>
                <%= f.email_field :email %>
                 Email <span class="text-muted">(Optional)</span>
                <div class="invalid-feedback">
                  Please enter a valid email address for shipping updates.
                </div>
              </div>

              <div class="col-12">
                <%= f.label :address1, "住所1" %>
                <%= f.text_field :address1 %>
                <div class="invalid-feedback">
                  Please enter your shipping address.
                </div>
              </div>

              <div class="col-12">
                <%= f.label :address2, "住所2" %>
                <%= f.text_field :address2 %>
              </div>

              <div class="col-md-5">
                <%= f.label :country, "国名" %> 
                <%= f.text_field :country %> 
                  <option value="">Choose...</option>
                  <option>United States</option>
                <div class="invalid-feedback">
                  Please select a valid country.
                </div>
              </div>

              <div class="col-md-4">
                <%= f.label :state, "都道府県" %>
                <%= f.text_field :state %> 
                  <option value="">Choose...</option>
                  <option>California</option>
                <div class="invalid-feedback">
                  Please provide a valid state.
                </div>
              </div>

              <div class="col-md-3">
                <%= f.label :zip, "郵便番号" %>
                <%= f.number_field :zip %>
                <div class="invalid-feedback">Zip code required.</div>
              </div>
            </div>


            
            <h4 class="mb-3">クレジットカード決済</h4>
              <div class="row gy-3">
              <div class="col-md-6">
                <%= f.label :card_name, "カードに記載されている名前" %>
                <%= f.number_field :card_name %>
                <small class="text-muted">Full name as displayed on card</small>
                <div class="invalid-feedback">Name on card is required</div>
              </div>

              <div class="col-md-6">
                <%= f.label :card_number, "クレジットカード番号" %>
                <%= f.number_field :card_number %>
                <div class="invalid-feedback">
                  Credit card number is required
                </div>
              </div>

              <div class="col-md-3">
                <%= f.label :card_expiration, "有効期限" %>
                <%= f.number_field :card_expiration  %>
                <div class="invalid-feedback">Expiration date required</div>
              </div>

              <div class="col-md-3">
                <%= f.label :card_cvv, "裏に記載されている番号" %>
                <%= f.number_field :card_cvv %>
                <div class="invalid-feedback">Security code required</div>
              </div>
            </div>
            <hr class="my-4" />

            
            <%= f.submit '購入する', class: "w-100 btn btn-primary btn-lg" %>
          <% end %>
        </div>
      </div>
    </main>

    <footer class="my-5 pt-5 text-muted text-center text-small">
      <p class="mb-1">© 2017-2022 Company Name</p>
      <ul class="list-inline">
        <li class="list-inline-item"><a href="#">Privacy</a></li>
        <li class="list-inline-item"><a href="#">Terms</a></li>
        <li class="list-inline-item"><a href="#">Support</a></li>
      </ul>
    </footer>
  </div>