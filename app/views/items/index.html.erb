<section class="py-5">
  <div class="container px-4 px-lg-5 mt-5">
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
      <% @items.each do |item| %>
        <div class="col mb-5">
          <div class="card h-100">
            <%= link_to item_path(item)do %>
              <%= image_tag item.image_name, class:"card-img-top" %>
            <% end %>
            <div class="card-body p-4">
              <div class="text-center">
                <%= link_to item_path(item), style: "text-decoration: none; color: black;"  do %>
                  <h5 class="fw-bolder"><%= item.name %></h5>
                <% end %>
                <%= item.price %>円
              </div>
            </div>
            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
              <div class="text-center">
                <%= form_with url: item_cart_items_path(item), method: :post do |f| %>
                <%= f.hidden_field :quantity, value: 1 %>
                <%= f.submit "カートに追加", class:"btn btn-outline-dark flex-shrink-0"  %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
