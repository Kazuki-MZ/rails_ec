<section class="py-5">
  <div class="container px-4 px-lg-5 my-5">
    <div class="row gx-4 gx-lg-5 align-items-center">
      <div class="col-md-6">
        <%= image_tag @item.image_name, class:"card-img-top mb-5 mb-md-0" %>
      </div>
        <div class="col-md-6">
          <div class="small mb-1"></div>
            <h1 class="display-5 fw-bolder"><% @item.name %></h1>
            <div class="fs-5 mb-5">
              <h1>
                <%= @item.name  %>
              </h1>
              <h4>
                <%= @item.price %>円
              </h4>
            </div>
            <p class="lead"><%= @item.context %></p>
            <div class="d-flex align-items-center">
              <%= form_with url: item_cart_items_path(@item), method: :post do |f| %>
              <%= f.number_field :quantity, value: 1, min: 1, class:"form-control text-center me-3" %>
              <i class="bi-cart-fill me-1"></i>
              <%= f.submit "カートに追加", class:"btn btn-outline-dark flex-shrink-0 mt-3"  %>
              <% end %>
            </div>
          </div>
    </div>
  </div>
</section>
<!-- Related items section-->
<section class="py-5 bg-light">
  <div class="container px-4 px-lg-5 mt-5">
    <h2 class="fw-bolder mb-4">関連商品</h2>
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
      <% @other_items.each do |item| %>
        <div class="col mb-5">
          <div class="card h-100">
            <%= image_tag (item.image_name) %>                    <!-- Product details-->
            <div class="card-body p-4">
              <div class="text-center">
                <h5 class="fw-bolder">
                  <%= link_to item_path(item),style: "text-decoration: none; color: black;" do %>
                    <%= item.name %>
                  <% end %>
                </h5>
                <%= item.price %>円
              </div>
            </div>
            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
              <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">カートに追加</a></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>